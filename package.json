{
  "name": "react-native-render-pdf",
  "version": "1.0.8",
  "summary": "A modern React Native PDF view component",
  "description": "A modern React Native PDF view component that supports Android and iOS",
  "main": "index.js",
  "typings": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanfordGidraph/react-native-render-pdf.git"
  },
  "keywords": [
    "react-component",
    "react-native",
    "android",
    "ios",
    "pdf",
    "view",
    "viewer"
  ],
  "scripts": {
    "semver": "standard-version",
    "tag-release": "git push --follow-tags origin master",
    "release": "yarn semver && yarn tag-release",
    "build:release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "hidden": true
            },
            {
              "type": "docs",
              "hidden": true
            },
            {
              "type": "style",
              "hidden": true
            },
            {
              "type": "refactor",
              "hidden": true
            },
            {
              "type": "perf",
              "hidden": true
            },
            {
              "type": "test",
              "hidden": true
            }
          ]
        }
      }
    }
  },
  "author": {
    "name": "Danford Gidraph",
    "url": "https://github.com/danfordgidraph"
  },
  "license": "MIT",
  "homepage": "https://github.com/danfordgidraph/react-native-render-pdf",
  "bugs": {
    "url": "https://github.com/danfordgidraph/react-native-render-pdf/issues"
  },
  "dependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "deprecated-react-native-prop-types": "^2.3.0",
    "md5": "^2.3.0",
    "release-it": "^17.4.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/runtime": "^7.20.1",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-blob-util": ">=0.13.7"
  },
  "files": [
    "android/",
    "ios/",
    "windows/",
    "DoubleTapView.js",
    "index.d.ts",
    "index.js",
    "index.js.flow",
    "PdfManager.js",
    "PdfPageView.js",
    "PdfView.js",
    "PdfViewFlatList.js",
    "PinchZoomView.js",
    "react-native-render-pdf.podspec",
    "fabric/"
  ],
  "codegenConfig": {
    "name": "rnpdf",
    "type": "components",
    "jsSrcsDir": "./fabric",
    "android": {
      "javaPackageName": "org.staxtech.android.pdf"
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "packageManager": "yarn@4.3.1"
}
